# ELHAIBA BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains all environment variables required for the application
# Copy this file to .env.local for production and modify values as needed
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: trace, debug, info, warn, error
RUST_LOG=debug

# App host and port
APP_HOST=127.0.0.1
APP_PORT=4000

# =============================================================================
# MINIO CONFIGURATION
# =============================================================================
# MinIO Object Storage Service Configuration
# Used for file storage and object management

# MinIO server endpoint (without protocol)
MINIO_ENDPOINT=localhost:9000

# MinIO access credentials
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Default bucket name for file storage
MINIO_BUCKET_NAME=elhaiba-bucket

# MinIO region (optional, defaults to us-east-1)
MINIO_REGION=us-east-1

# Use HTTPS for MinIO connection (true/false)
MINIO_SECURE=false


# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Cache Service Configuration
# Used for caching, session storage, and real-time data

# Redis server connection details
REDIS_HOST=localhost
REDIS_PORT=6379

# Redis authentication (optional)
REDIS_USERNAME=frix
REDIS_PASSWORD=07vk640xz

# Redis database number (0-15, defaults to 0)
REDIS_DATABASE=0

# Connection pool configuration
REDIS_POOL_MAX_SIZE=20

# Timeout configurations (in seconds)
REDIS_CONNECTION_TIMEOUT=5
REDIS_COMMAND_TIMEOUT=10

# Use TLS/SSL for Redis connection (true/false)
REDIS_USE_TLS=false

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT (JSON Web Token) Authentication Configuration
# Used for user authentication and authorization

