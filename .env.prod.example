# Production Environment Variables
# Copy this file to .env.prod and fill in the values

# Database Configuration
MONGODB_URI=mongodb://mongo:27017
MONGODB_DATABASE=elhaiba
MONGODB_USERNAME=elhaiba
MONGODB_PASSWORD=your_secure_password_here
MONGODB_QUOTE_COLLECTION=quotes

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_32_characters_long
JWT_ACCESS_TOKEN_EXPIRATION=15
JWT_REFRESH_TOKEN_EXPIRATION=10080
JWT_ISSUER=elhaiba-backend
JWT_AUDIENCE=elhaiba-backend-users

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_secure_minio_password
MINIO_BUCKET_NAME=elhaiba-bucket
MINIO_REGION=us-east-1
MINIO_SECURE=false
MINIO_LINKS_PREFIX=127.0.0.1:9000/

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com
FROM_NAME=Elhaiba

# App Configuration
APP_HOST=0.0.0.0
APP_PORT=4000

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_EMAIL=admin@elhaiba.com
ADMIN_PASSWORD=your_secure_admin_password

# Password Reset Configuration
FRONTEND_BASE_URL=http://localhost:3000
RESET_PASSWORD_PATH=/reset-password
RESET_TOKEN_EXPIRATION=3600
RESET_TOKEN_REDIS_PREFIX=reset_token:

# Logging
RUST_LOG=info
RUST_BACKTRACE=1
